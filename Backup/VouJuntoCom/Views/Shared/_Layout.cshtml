@using VouJuntoCom.Helpers
<!DOCTYPE html>
<html>
<head>
    <title>VouJunto.com</title>
    <meta charset="utf-8">
    <meta name="author" content="Cássia Zottis">
    <meta name="description" content="VouJunto.com - Solução sustentável para o compartilhamento de caronas">
    <meta name="keywords" content="compartilhamento, caronas, voujunto, voujuntocom">
    <link href="@Url.Content("~/Content/Styles/Site.css")" rel="stylesheet" type="text/css">
    <script type="text/javascript" src="../../Scripts/jquery-1.7.2.min.js"></script>
    <script type="text/javascript" src="../../Scripts/general.js"></script>
    <script type="text/javascript" src="../../Scripts/masked-input-plugin.js"></script>
</head>
<body>
    <div class="fademe" style="display:none;">
        <div id="loginDiv">
             <ul>
                <li style="margin-bottom:10px;">
                    <input type="text" placeholder="Usuário" name="username" id="txtUsername" style="width:100%"/>
                </li>
                <li style="margin-bottom:10px;">
                    <input type="password" placeholder="Senha" name="password" id="txtPassword" style="width:100%"/>
                </li>
                <li style="text-align:right;">
                    <a href="javascript:void(0)" class="btnPadrao" onclick="LoginApplication()">ENTRAR</a>
                </li>
             </ul>
        </div>
    </div>
    <header>
        <article id="top">
           <div class="wrap">
                <img id="imgEcoSolution" src="../../Content/Images/EcoSolution.png" title="EcoSolutions - Soluções para o Meio Ambiente" alt="EcoSolutions - Soluções para o Meio Ambiente"/>
                <a href="javascript:void(0)" class="btnPadrao" id="btnLogin" onclick="ShowLogin()">LOGIN</a>
           </div>
        </article>
        <div class="greenLine"></div>
        <article id="divMenu" class="wrap" style="margin-top:30px;">
            <a href="@Url.Content("~/InicialPage")">
                <img id="AplicationLogo" src="../../Content/Images/AplicationLogo.png" title="VouJunto.com" alt="VouJunto.com" />
            </a>
                @Html.Partial("_MenuLogout")
        </article>
    </header>
    <section id="main" class="wrap">
        @RenderBody()
        <div id="messageError" class="messageErrorField" style="display: none;">
        </div>
    </section>
    <footer>
        <div class="greenLine"></div>
        <br />
        <label>Todos os direitos reservados a VouJunto.com ©
            <script type="text/javascript">document.write(new Date().getFullYear());</script>
        </label>
    </footer>
</body>
</html>

<script>
    function ShowLogin() {
        $('#txtUsername').removeClass('errorField');
        $('#txtPassword').removeClass('errorField');
        $('.fademe').fadeIn('slow');
    }

    
    function LoginApplication() {
        var username = $('#txtUsername').val();
        var password = $('#txtPassword').val();
        if (username.length > 0 && password.length > 0) {
            $('#txtUsername').removeClass('errorField');
            $('#txtPassword').removeClass('errorField');

            $.ajax({
                type: "POST",
                url: "/InicialPage/Login",
                data: { user: username, password: password }
            });
        }
        else {
            $('#txtUsername').addClass('errorField');
            $('#txtPassword').addClass('errorField');
        }
    }
</script>